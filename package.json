{
  "name": "effect-bun-cli",
	"module": "src/index.ts",
	"type": "module",
	"private": true,
	"scripts": {
		"dev": "bun run src/index.ts",
		"start": "bun run src/index.ts",
		"build": "bun build src/index.ts --outfile=dist/cli --target=bun --external=@effect/* --external=effect",
		"lint": "bunx biome check",
		"lint:fix": "bunx biome check --write",
		"format": "bunx biome format --write .",
		"test": "bun test",
		"typecheck": "tsc --noEmit"
	},
	"bin": {
		"effect-cli": "./src/index.ts"
	},
	"devDependencies": {
		"@biomejs/biome": "2.3.1",
		"@effect/language-service": "^0.48.0",
		"@types/bun": "^1.3.1"
	},
	"dependencies": {
		"@effect/cli": "^0.71.0",
		"@effect/platform": "^0.92.1",
		"@effect/platform-node": "^0.98.4",
		"@effect/schema": "^0.75.5",
		"effect": "^3.18.4"
	},
	"peerDependencies": {
		"typescript": "^5"
	}
}
